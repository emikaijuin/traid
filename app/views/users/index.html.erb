    <div id="user-homepage-notifications">
        <h3>Notifications</h3>
        <% if !@user.notifications.empty? %>
          <% @user.notifications.each do |notification| %>
            <li>
              <span>
                <%= notification.text %>
                <%= link_to "View More", notification_path(notification), :method => :delete %>
              </span>
            </li>
          <% end %>
        <% else %>
          <p>You have no new notifications.</p>
        <% end %>
    </div>
