    <div id="user-homepage-active-traids">
      <h3>Ongoing Traids</h3>
      <% if !@traids.empty? %>
        <% @traids.each_with_index do |traid, index| %>
          <% unless traid.finalized? || traid.canceled? %>
           <%= render "users/traid_link", traid: traid, index: index %>
           <hr>
         <% end %>
        <% end %>
      <% else %>
        <div>
          You have no ongoing traids.
        </div>
      <% end %>
    </div>
